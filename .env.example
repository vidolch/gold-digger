# Gold Digger Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama server host and port
OLLAMA_HOST=http://localhost:11434

# AI model to use (must be available in your Ollama instance)
OLLAMA_MODEL=gpt-oss:20b

# Ollama request timeout in seconds
OLLAMA_TIMEOUT=120

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_PATH=gold_prices.db

# =============================================================================
# TRADING ANALYSIS CONFIGURATION
# =============================================================================

# Default analysis interval (15m, 30m, 1h, etc.)
DEFAULT_INTERVAL=15m

# Default hours of data to analyze
DEFAULT_ANALYSIS_HOURS=24

# Trading prompt template file
PROMPT_FILE=trading_prompt.txt

# =============================================================================
# DATA FETCHING CONFIGURATION
# =============================================================================

# Default number of days to fetch
DEFAULT_FETCH_DAYS=14

# Gold symbol to track
GOLD_SYMBOL=GC=F

# Yahoo Finance request timeout in seconds
YFINANCE_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=false

# Log file path (only used if ENABLE_FILE_LOGGING=true)
LOG_FILE=gold_digger.log

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Default export directory for CSV files
EXPORT_DIR=exports

# Include volume in exports (true/false)
EXPORT_INCLUDE_VOLUME=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Rate limiting - delay between API calls (in seconds)
API_DELAY=1.0

# Maximum retries for failed API calls
MAX_RETRIES=3

# =============================================================================
# RISK MANAGEMENT DEFAULTS
# =============================================================================

# Default risk level for analysis (LOW, MEDIUM, HIGH)
DEFAULT_RISK_LEVEL=MEDIUM

# Default position size as percentage of portfolio
DEFAULT_POSITION_SIZE=0.05

# =============================================================================
# DEVELOPMENT/DEBUG OPTIONS
# =============================================================================

# Enable debug mode (shows more verbose output)
DEBUG_MODE=false

# Skip model availability check (for development)
SKIP_MODEL_CHECK=false

# Use mock data instead of real API calls (for testing)
USE_MOCK_DATA=false
